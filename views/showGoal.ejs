  <div class="jumbotron">
      <h1><%= goal.userName %>'s personal goal</h1>
      <hr>
  </div>
  <style>
  .jumbotron {
     /*background: rgb(200, 54, 54); /* This is for ie8 and below */
     background: rgba(255, 255, 255, 0.2);*/
  }

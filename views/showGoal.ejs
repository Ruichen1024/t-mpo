      <h1><%= goal.userName %>'s personal goal</h1>
      <hr>
  </div>

  <table class="table table-dark">
      <tbody>
        <tr>
          <td>daily deposit</td>
          <td><%= goal.cash %></td>
        </tr>
        <tr>
